{
  "manifest_version": 3,
  "name": "Salary Tracker",
  "version": "1.2",
  "description": "Track your real-time earnings during work hours with customizable hourly rates and scheduled tracking periods.",
  "action": {
    "default_icon": "salarytracker.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "salarytracker.png",
    "32": "salarytracker.png",
    "48": "salarytracker.png",
    "128": "salarytracker.png"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
